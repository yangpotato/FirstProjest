<swiper class="viewpager" current="{{currentTab}}" duration="300" bindchange="switchTab"
  style="height: {{winHeight}}px">
    <swiper-item wx:for="{{10}}" wx:key="index" >
      <view class=".dynamic_template" >
        <view wx:for="{{dynamicList}}">
              <template is="dynamic" data="{{item}}"/>
        </view>
      </view>
    </swiper-item>
</swiper>
   
