 <view class="view_dynamic">
    <scroll-view class="tab_layout" scroll-x="true" scroll-left="{{scrollLeft}}">
        <text class="text_dynamic {{currentTab==0?'active':''}}" data-current="0" bindtap="swichNav">动态</text>
        <text class="text_dynamic {{currentTab==1?'active':''}}" data-current="1" bindtap="swichNav">动态</text>
        <text class="text_dynamic {{currentTab==2?'active':''}}" data-current="2" bindtap="swichNav">动态</text>
        <text class="text_dynamic {{currentTab==3?'active':''}}" data-current="3" bindtap="swichNav">动态</text>
        <text class="text_dynamic {{currentTab==4?'active':''}}" data-current="4" bindtap="swichNav">动态</text>
        <text class="text_dynamic {{currentTab==5?'active':''}}" data-current="5" bindtap="swichNav">动态</text>
        <text class="text_dynamic {{currentTab==6?'active':''}} " data-current="6" bindtap="swichNav">动态</text>       
        <text class="text_dynamic {{currentTab==7?'active':''}}" data-current="7" bindtap="swichNav">动态</text>
        <text class="text_dynamic {{currentTab==8?'active':''}}" data-current="8" bindtap="swichNav">动态</text>      
        <text class="text_dynamic {{currentTab==9?'active':''}}" data-current="9" bindtap="swichNav">动态</text>
    </scroll-view>
</view>
