<import src ="../dynamic/dynamic.wxml"/>

<view class="top_bg">
    <view class="top_view">
        <image class="community_icon" src="{{communityInfo.avatar}}" mode="aspectFit|aspectFill|widthFix"
            lazy-load="false" />
        <text class="community_name">{{communityInfo.name}}</text>
        <view class="close_img_view">
            <image class="close_img" src="../../images/close.png" />
        </view>
        <view class="share_view">
            <image class="img_more" src="../../images/collection.png" mode="aspectFit|aspectFill|widthFix"
                lazy-load="false" binderror="" bindload="" />
            <image class="img_more" src="../../images/more.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false"
                binderror="" bindload="" />
        </view>
    </view>
    <view class="text_three">
        <text class="three_center">{{communityInfo.total_sales_num}}</text>
        <text class="three_center">{{communityInfo.join_num}}</text>
        <text class="three_center">{{communityInfo.bonus_pools_num}}</text>
    </view>
    <view class="text_three_2">
        <text class="three_center text_24">售出(件）</text>
        <text class="three_center text_24">成员数</text>
        <text class="three_center text_24">奖金池(元)</text>
    </view>
    <view class="ruler_view">
        <text class="announcement">公告</text>
        <text class="text_ruler_value">{{communityInfo.community_intro == '' ? '暂无设置公告' : communityInfo.community_intro}}</text>
        <text class="text_ruler">社群规则</text>
    </view>
</view>
<view class="view_charge_main">
    <view class="view_charge">
        <image class="charge_img" src="../../images/icon_oil.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
        <view class="text_charge_view">
            <text class="text_charge">9.5折加油</text>
            <text class="text_charge text_24">中石油、中石化</text>
        </view>
    </view>
    <view class="view_charge view_charge_right">
        <image class="charge_img" src="../../images/icon_charge.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
        <view class="text_charge_view">
            <text class="text_charge">9.5折充话费</text>
            <text class="text_charge text_24">移动、联动、电信</text>
        </view>
    </view>
</view>
<view class="view_shop">
    <image class="shop_img" src="../../images/icon_shop.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
    <text class="shop_text">进入商店</text>
</view>

