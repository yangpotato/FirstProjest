/* pages/second/second.wxss */
.toolbar{
  width: 100%;
  height: 100rpx;
  background: #ffffff;
}
.my_img {
  width: 16rpx;
  height: 32rpx;
  position: absolute;
  left: 20rpx;
  top: 34rpx;
}
.my_title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: CENTER;
  float: right;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  -ms-text-overflow: ellipsis;
  white-space:nowrap;
}
.item_view{
  /* padding-top: 24.5rpx */
  background: #ff0000;
  margin-top: 10rpx;
  min-height: 144rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:flex-end;
}
.icon{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50rpx;
  margin-left: 52rpx;
  margin-top: auto;
  margin-bottom: auto;
}
.in_view{
  background: #00ff00;
  margin-top: auto;
  margin-bottom: auto;
  margin-left: 28rpx;
  /* padding-top: 24.5rpx */
}
.item_title{
  text-size-adjust: 28rpx;
  text-align: top;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  -ms-text-overflow: ellipsis;
  white-space:nowrap;
}
.right-img{
  width: 12rpx;
  height: 20rpx;
  margin-top: auto;
  margin-bottom: auto;
  justify-content: right;
}