/* pages/home.wxss */
.swiper{
  margin-left: 24rpx;
  margin-right: 24rpx;
  height: 240rpx;
}
.swiper-item{
  width: 100%;
}
.scroll{
  width: 100%;
  display: flex;
  white-space:nowrap;
  margin-top: 32rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.community_item_img{
   height: 144rpx;
  width: 144rpx;
  display: flex;
  /* box-shadow: 12rpx 12rpx 12rpx 12rpx #00000012; */
  border: 3rpx solid #00000012;
  border-radius: 8rpx;
  align-items: center;
  justify-content: center;
}
.community_item{
  display: inline-block;
  margin-left: 24rpx;
  flex-wrap:wrap;
  width: 144rpx;
}
.community-img{
  height: 96rpx;
  width: 96rpx;
  border-radius: 100rpx;
}
::-webkit-scrollbar {
display: none;
}
.community_item_text{
  width: 144rpx;
  /* height: auto; */
  text-align: center;
  font-size: 24rpx;
  color: #333333;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  -ms-text-overflow: ellipsis;
  white-space: nowrap;
}